<h1>All Tags</h1>

<ul id="tags">
  <% @tag.each do |tag| %>
    <li>
      <%= link_to tag.name, tag_path(tag.id) , class: 'articulos_title'%>
      <%= link_to "delete", tag_path(@tag.ids),method: :delete, data: {confirm: "Really delete the tag?"} %>
    </li>
  <% end %>
</ul>
<%= link_to "Create a New Articuloe", new_article_path, class: "new_article" %>
